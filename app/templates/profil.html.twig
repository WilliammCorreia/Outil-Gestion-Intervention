<html>
    <head>
        <meta charset="utf-8"/>
        <title>AccordEnergie</title>
        <link rel="stylesheet" href="style/register.css"/>
    </head>
</html>
{% block content %}
    <body>
        <header>
            <h2>AccordEnergie</h2>
            <img src="style/logo.png" alt="Logo">
        </header>
        <main>
            <h1>Créer un compte</h1>

            <form action="" method="post">
                <label for="email"></label>
                <input for="email"
                    type="email"
                    required="required"
                    id="email"
                    name="email"
                    placeholder="Entrer l'email"
                />
                <br>
                <label for="password"></label>
                <input
                    type="password"
                    required="required"
                    id="password"
                    name="password"
                    placeholder="Entrer le mot de passe"
                />
                <br>
                <label for="password_cfg"></label>
                <input
                    type="password"
                    required="required"
                    id="password_cfg"
                    name="password_cfg"
                    placeholder="Confirmer le mot de passe"
                />
                <br>
                <label for="last_name"></label>
                <input for="last_name"
                    type="text"
                    required="required"
                    id="last_name"
                    name="last_name"
                    placeholder="Entrer le nom"
                />
                <br>
                <label for="first_name"></label>
                <input for="first_name"
                    type="text"
                    required="required"
                    id="first_name"
                    name="first_name"
                    placeholder="Entrer le prénom"
                />
                <br>
                <label for="postal_nb"></label>
                <input for="postal_nb"
                    type="text"
                    required="required"
                    id="postal_nb"
                    name="postal_nb"
                    placeholder="Entrer votre code postal"
                />
                <br>

                <div>
                    <input type="submit" name="send" value="Créer" />
                </div>
            </form>

            <p>
                <a href="index.php">Se connecter ?</a>
            </p>
        </main>
    </body>
{% endblock %}
