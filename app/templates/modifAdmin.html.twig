<html>
    <head>
        <meta charset="utf-8"/>
        <title>AccordEnergie</title>
        <link rel="stylesheet" href="style/register.css"/>
    </head>
</html>
{% block content %}
    <body>
        <header>
            <h2>AccordEnergie</h2>
            <img src="style/logo.png" alt="Logo">
        </header>
        <main>
            <h1>Modifier un compte</h1>

            <form action="admin.php" method="post">
                <label for="id">ID :</label>
                <input for="id"
                    type="number"
                    required="required"
                    id="id"
                    name="id"
                    value="{{ user.id }}"
                />
                <br>
                <label for="email">Email :</label>
                <input for="email"
                    type="email"
                    required="required"
                    id="email"
                    name="email"
                    value="{{ user.email }}"
                />
                <br>
                <label for="last_name">Nom :</label>
                <input for="last_name"
                    type="text"
                    required="required"
                    id="last_name"
                    name="last_name"
                    value="{{ user.last_name }}"
                />
                <br>
                <label for="first_name">Pr√©nom :</label>
                <input for="first_name"
                    type="text"
                    required="required"
                    id="first_name"
                    name="first_name"
                    value="{{ user.first_name }}"
                />
                <br>
                <label for="postal_nb">Code Postal :</label>
                <input for="postal_nb"
                    type="text"
                    required="required"
                    id="postal_nb"
                    name="postal_nb"
                    value="{{ user.postal_nb }}"
                />
                <br>
                <label for="statut">Statut :</label>
                <input
                    type="text"
                    required="required"
                    id="statut"
                    name="statut"
                    value="{{ user.statut }}"
                />
                <div>
                    <input type="submit" name="userModif" value="Modifier" />
                </div>
            </form>

            <p>
                <a href="index.php">Se connecter ?</a>
            </p>
        </main>
    </body>
{% endblock %}
