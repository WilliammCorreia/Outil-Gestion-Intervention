<html>
    <head>
        <meta charset="utf-8"/>
        <title>AccordEnergie</title>
        <link rel="stylesheet" href="style/register.css"/>
    </head>
</html>
{% block content %}
    <body>
        <header>
            <h2>AccordEnergie</h2>
            <img src="style/logo.png" alt="Logo">
        </header>
        <main>
            <h1>Modifier un Ticket</h1>

            <form action="main.php?statut={{statut}}&id={{id}}" method="post">
                <label for="id_ticket">ID :</label>
                <input for="id_ticket"
                    type="text"
                    required="required"
                    id="id_ticket"
                    name="id_ticket"
                    value="{{ ticket.id_ticket }}"
                />
                <label for="sujet">Sujet :</label>
                <input for="sujet"
                    type="text"
                    required="required"
                    id="sujet"
                    name="sujet"
                    value="{{ ticket.sujet }}"
                />
                <br>
                <label for="statut">Statut :</label>
                <input for="statut"
                    type="text"
                    required="required"
                    id="statut"
                    name="statut"
                    value="{{ticket.statut}}"
                />
                <br>
                <label for="priorite">Priorite :</label>
                <input for="priorite"
                    type="text"
                    required="required"
                    id="priorite"
                    name="priorite"
                    value="{{ticket.priorite}}"
                />
                <br>
                <label for="assigne">Assign√© :</label>
                <input for="assigne"
                    type="text"
                    required="required"
                    id="assigne"
                    name="assigne"
                    value="{{ticket.assigne}}"
                />
                <br>
                <label for="demandeur">Demandeur :</label>
                <input for="demandeur"
                    type="text"
                    required="required"
                    id="demandeur"
                    name="demandeur"
                    value="{{ticket.demandeur}}"
                />
                <br>
                <label for="id_client">ID Client :</label>
                <input for="id_client"
                    type="text"
                    required="required"
                    id="id_client"
                    name="id_client"
                    value="{{ticket.id_client}}"
                />
                <br>
                <label for="id_intervenant">ID Intervenant :</label>
                <input for="id_intervenant"
                    type="text"
                    required="required"
                    id="id_intervenant"
                    name="id_intervenant"
                    value="{{ticket.id_intervenant}}"
                />
                <br>
                <div>
                    <input type="submit" name="modifTicket" value="Modifier" />
                </div>
            </form>
        </main>
    </body>
{% endblock %}
