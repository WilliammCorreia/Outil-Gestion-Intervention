<html>
    <head>
        <meta charset="utf-8"/>
        <title>AccordEnergie</title>
        <link rel="stylesheet" href="style/register.css"/>
    </head>
</html>
{% block content %}
    <body>
        <header>
            <h2>AccordEnergie</h2>
            <img src="style/logo.png" alt="Logo">
        </header>
        <main>
            <h1>Ajouter un Ticket</h1>

            <form action="main.php?statut={{statut}}&id={{id}}" method="post">
                <label for="sujet">Sujet :</label>
                <input for="sujet"
                    type="text"
                    required="required"
                    id="sujet"
                    name="sujet"
                />
                <br>
                <label for="note">Commentaire :</label>
                <input for="note"
                    type="text"
                    required="required"
                    id="note"
                    name="note"
                />
                <br>
                <div>
                    <input type="submit" name="addTicket" value="Ajouter" />
                </div>
            </form>
        </main>
    </body>
{% endblock %}
