<html>
    <head>
        <meta charset="utf-8"/>
        <title>AccordEnergie</title>
        <link rel="stylesheet" href="style/register.css"/>
    </head>
</html>
{% block content %}
    <body>
        <header>
            <h2>AccordEnergie</h2>
            <img src="style/logo.png" alt="Logo">
        </header>
        <main>
            <h1>Modifier le Statut</h1>

            <form action="main.php?statut={{statut}}&id={{id}}" method="post">
                <label for="id_ticket">ID :</label>
                <input for="id_ticket"
                    type="number"
                    required="required"
                    id="id_ticket"
                    name="id_ticket"
                    value="{{ id_ticket }}"
                />
                <br>
                <label for="statut">Statut :</label>
                <input for="statut"
                    type="text"
                    required="required"
                    id="statut"
                    name="statut"
                />
                <br>
                <div>
                    <input type="submit" name="modifStatut" value="Modifier" />
                </div>
            </form>
        </main>
    </body>
{% endblock %}
